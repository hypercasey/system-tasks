#!/usr/bin/env bash

echo '{ status: "SUCCESS", message: "ðŸ–¥  Terminating remote endpoint" }'

if sudo systemctl stop devopsctl.service; then
  echo '{ status: "SUCCESS", message: "ðŸ–¥  Remote endpoint terminated" }'
else
  echo '{ status: "SUCCESS", message: "ðŸ–¥  Remote endpoint failed to terminate" }'
fi

echo '{ status: "SUCCESS", message: "ðŸ–¥  Provisioning new endpoint" }'

if sudo systemctl start devopsctl.service; then
  echo '{ status: "SUCCESS", message: "ðŸ–¥  Remote endpoint provisioned" }'
else
  echo '{ status: "SUCCESS", message: "ðŸ–¥  Remote endpoint failed to provision" }'
fi
